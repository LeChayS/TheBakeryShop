@model IEnumerable<TheBakeryShop.Models.tbUser>

@{
    ViewBag.Title = "Quản lý người dùng";
    Layout = "~/Views/Share/_AdminLayout.cshtml";
}

<h2>DANH SÁCH NGƯỜI DÙNG</h2>

<p>
    @Html.ActionLink("Tạo người dùng mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idUser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.userName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.userPass)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.codeCus)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idUser)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.userName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.userPass)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.codeCus)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new {  id=item.idUser  }) |
            @Html.ActionLink("Chi tiết", "Details", new {  id=item.idUser  }) |
            @Html.ActionLink("Xóa", "Delete", new {  id=item.idUser  })
        </td>
    </tr>
}

</table>
