<!--font-->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Asap&family=Comfortaa&family=Merienda&family=Playpen+Sans&display=swap" rel="stylesheet">

<div class="bg-news">
    <h1>Chi Tiết Sản Phẩm</h1>
</div>

<div class="container">
    <div class="row">

        <div class="col-lg-5 col-img">
            <img src="@Url.Content(Model.imagePro)" alt="detail" id="productImg">
            <div class="row small-img-row">
                @*<div class="col-lg-4 small-img">
                        <img src="~/MyContent/Image/banh-mi/banh-mi-cha-bong-rong-bien.jpg" alt="" class="img-small">
                    </div>
                    <div class="col-lg-4 small-img">
                        <img src="~/MyContent/Image/banh-mi/banh-mi-hoa-cuc-bo-toi.jpg" alt="" class="img-small">
                    </div>
                    <div class="col-lg-4 small-img">
                        <img src="~/MyContent/Image/banh-mi/banh-mi-man.jpg" alt="" class="img-small">
                    </div>*@
            </div>
        </div>

        <div class="col-lg-7 pro-info">
            <h3>@Model.namePro</h3>
            <div class="status">
                <h5>Loại bánh: <a href="@Url.Action("SanPham","Product")"></a></h5>
                <h5>Tình trạng: @Model.statePro</h5>
                <p>@Model.pricePro đ</p>
            </div>
            <div class="quantity">
                <button type="button"><i class="fi fi-br-minus"></i></button>
                <input type="text" value="1">
                <button type="button"><i class="fi fi-br-plus"></i></button>
            </div>
            <button type="button">Thêm vào giỏ</button>
        </div>
    </div>
</div>

