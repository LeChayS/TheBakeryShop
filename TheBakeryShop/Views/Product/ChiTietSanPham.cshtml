@model TheBakeryShop.Models.tbProduct

@{
    ViewBag.Title = Model.namePro;
    Layout = "~/Views/Share/_MainLayout.cshtml";
}

<!--bootstrap-->
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>

<!--css,js-->
<link href="~/MyContent/Css/prodetail.css" rel="stylesheet" />
<script src="~/MyContent/Js/prodetail.js"></script>
<link href="~/MyContent/Css/bg-news.css" rel="stylesheet" />

<!--icon-->
<link rel='stylesheet' href='https://cdn-uicons.flaticon.com/uicons-bold-rounded/css/uicons-bold-rounded.css'>
