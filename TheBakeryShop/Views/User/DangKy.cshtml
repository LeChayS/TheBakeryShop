@model TheBakeryShop.Models.tbUser
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--bootstrap-->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <!--css,jvs-->
    <link href="~/MyContent/Css/signInUp.css" rel="stylesheet" />

    <!--icon-->
    <link rel='stylesheet' href='https://cdn-uicons.flaticon.com/uicons-bold-rounded/css/uicons-bold-rounded.css'>
    <link rel='stylesheet' href='https://cdn-uicons.flaticon.com/uicons-brands/css/uicons-brands.css'>

    <!--font-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa&family=Merienda&family=Playpen+Sans&display=swap" rel="stylesheet">
    <title>Đăng ký</title>
</head>
<body>
    <div class="bg">
        <div class="wraper">
            <h3>Đăng ký</h3>
            @using (Html.BeginForm("AuthenDangKy", "User", FormMethod.Post))
            {
            <form action="">
                @*<input type="text" placeholder="Tên đăng nhập">
                    <input type="password" placeholder="Mật khẩu">
                    <input type="password" placeholder="Nhập lại mật khẩu">*@
                @Html.TextBoxFor(m => m.userName, new { placeholder = "Tên đăng nhập" })
                @Html.ValidationMessageFor(m => m.userName)
                @if (ViewBag.ErrorName != null)
                {
                    <p>@ViewBag.ErrorName</p>
                }

                @Html.PasswordFor(m => m.userPass, new { placeholder = "Mật khẩu" })
                @Html.ValidationMessageFor(m => m.userPass)
                @if (ViewBag.ErrorPass != null)
                {
                    <p>@ViewBag.ErrorPass</p>
                }

                @Html.PasswordFor(m => m.RePass, new { placeholder = "Nhập lại mật khẩu" })
                @Html.ValidationMessageFor(m => m.RePass)
                @if (ViewBag.ErrorPass != null)
                {
                    <p>@ViewBag.ErrorPass</p>
                }

                <input type="submit" value="Đăng ký" class="btn-sub">
            </form>
            <div class="signin">
                <span>Đã có tài khoản?</span>
                <a href="@Url.Action("DangNhap", "User")" class="up">Đăng nhập</a>
            </div>

            }
        </div>
    </div>
</body>
</html>
